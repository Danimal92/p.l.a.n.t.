<%= form_for(@volunteer) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :harvest %>
  <%= f.check_box :harvest, {}, true, false %><br>
  <%= f.label :drive%>
  <%= f.check_box :drive, {}, true, false%><br> 
  <%= f.collection_select :organization_id, Organization.all, :id, :name %>
  <%= f.submit %>
<% end %>

<%= button_to "Organizations", organizations_path(Organization.all), method: :get %>